<Window x:Class="RAA_Orientation.Form1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAA_Orientation"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400"
             Title="RAA Orientation">
    <Grid Margin="5,0,0,0" Background="#FF0D4A70">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=" 50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="What is your name?" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Background="#FFDE7E7E"/>
        <TextBox x:Name="tbxName" Grid.Row="2" Grid.Column="1" Height="30" Margin="5,2,5,2" VerticalContentAlignment="Center" />
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,5,5,5">
            <Button x:Name="btnOK" Content="OK" Width="75" Margin="0,0,5,0" Click="btnOK_Click" />
            <Button x:Name="btnCancel" Content="Cancel" Width="75" Margin="5,0,0,0" Click="btnCancel_Click" />
        </StackPanel>        
    </Grid>
</Window>
